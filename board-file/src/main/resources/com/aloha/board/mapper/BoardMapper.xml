<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.aloha.board.mapper.BoardMapper">

    <resultMap id="boardMap" type="Board">
        <id property="no" column="no" />
        <result property="title" column="title" />
        <result property="writer" column="writer" />
        <result property="content" column="content" />
        <result property="createdAt" column="created_at" />
        <result property="updatedAt" column="updated_at" />
        <collection property="fileList"
                    ofType="Files"
                    select="listByParent"
                    column="{parentTable=parent_table, parentNo=no}"
        />
    </resultMap>

    <select id="listByParent" resultType="Files">
        SELECT *
        FROM file
        WHERE parent_table = #{parentTable}
          AND parent_no = #{parentNo}
    </select>

    <select id="list" resultMap="boardMap">
        SELECT b.*
              ,'board' AS parent_table
        FROM board b
        ORDER BY created_at DESC
    </select>

    <select id="select" resultType="Board">
        SELECT *
        FROM board
        WHERE no = #{no}
    </select>

    <insert id="insert" useGeneratedKeys="true" keyProperty="no">
        INSERT INTO board ( title, writer, content )
        VALUES ( #{title}, #{writer}, #{content} )
    </insert>

    <update id="update">
        UPDATE board
           SET title = #{title}
              ,writer = #{writer}
              ,content = #{content}
              ,updated_at = now()
        WHERE no = #{no}
    </update>

    <delete id="delete">
        DELETE FROM board
        WHERE no = #{no}
    </delete>

</mapper>